<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <TextView
        android:layout_below="@id/app_bar"
        android:id="@+id/textViewSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sound_options"
        android:textAppearance="?android:textAppearanceLarge"/>

    <Switch
        android:id="@+id/toggleButtonSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/soundOn_options"
        android:textOff="@string/soundOff_options"
        android:text="@string/sound_options" />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lastName_options"
        android:textAppearance="?android:textAppearanceLarge" />

    <Switch
        android:id="@+id/toggleButtonLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/lastNameOn_options"
        android:textOff="@string/lastNameOff_options"
        android:text="@string/lastName_options" />

</LinearLayout>