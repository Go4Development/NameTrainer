<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <go4.szut.de.nametrainer.groupeditor.CustomHorizontalScrollView
        android:id="@+id/portrait_scrollview"
        android:scrollbars="none"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/wrapper_linearlayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dummy_linearlayout_1"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:id="@+id/portrait_linearlayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dummy_linearlayout_2"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

    </go4.szut.de.nametrainer.groupeditor.CustomHorizontalScrollView>

    <ListView
        android:id="@+id/group_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>